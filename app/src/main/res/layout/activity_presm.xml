<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bk"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sudharshan.medpal.presm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prescribed Medicines"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medicines:"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText17"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView16" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/bunz"
        android:text="Sign Out"
        android:id="@+id/s1"
        android:layout_marginBottom="109dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView16" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/bunz"
        android:onClick="notifp"
        android:text="Place Order"
        android:id="@+id/o4"
        android:layout_alignTop="@+id/s1"
        android:layout_alignEnd="@+id/textView15" />

</RelativeLayout>
