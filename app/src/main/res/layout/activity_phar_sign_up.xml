<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bk"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vijay.medpal.PharSignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Sign UP!!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Outlet Name:"
        android:id="@+id/textView31"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/textView36" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText16"
        android:hint="Name"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-Mail:"
        android:id="@+id/textView32"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText17"
        android:layout_alignBottom="@+id/textView32"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editText16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone:"
        android:id="@+id/textView33"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView32"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText17" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText18"
        android:layout_alignBottom="@+id/textView33"
        android:layout_toEndOf="@+id/textView33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/textView34"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText19"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignEnd="@+id/editText18"
        android:layout_toEndOf="@+id/textView33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/textView35"
        android:layout_above="@+id/editText21"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText20"
        android:layout_alignBottom="@+id/textView35"
        android:layout_toEndOf="@+id/textView31"
        android:layout_alignStart="@+id/editText19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Re-Enter Password:"
        android:id="@+id/textView36"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/cp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText19" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="min 8 characters"
        android:ems="10"
        android:id="@+id/editText21"
        android:layout_alignBottom="@+id/textView36"
        android:layout_alignEnd="@+id/editText20"
        android:layout_toEndOf="@+id/textView36" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/bunz"
        android:text="Create Profile"
        android:id="@+id/cp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
